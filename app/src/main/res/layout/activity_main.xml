<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="8dp">

    <Button
        android:id="@+id/main_btn_search"

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="@string/main_btn_search"
        android:textSize="40dp"
        android:drawableLeft="@mipmap/ic_search"
        android:drawableTint="@color/icons"
        android:background="@color/colorPrimary"
        android:paddingLeft="80dp"
        android:paddingRight="40dp"
        android:elevation="8dp"
        android:textColor="@color/icons"
        android:textAlignment="textStart"
        />

    <TextView
        android:id="@+id/main_label_myevents"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_label_myevents"
        app:layout_constraintTop_toBottomOf="@id/main_btn_search"
        android:textColor="@color/primaryText"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/main_btn_favorites"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="@string/main_btn_favorites"
        android:textSize="40dp"
        android:drawableLeft="@mipmap/ic_favorite"
        android:drawableTint="@color/icons"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintTop_toBottomOf="@+id/main_label_myevents"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:elevation="8dp"
        android:textColor="@color/icons"
        />
    <Button
        android:id="@+id/main_btn_pending"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="@string/main_btn_pending"
        android:textSize="40dp"
        android:drawableLeft="@mipmap/ic_launcher"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_favorites"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:elevation="8dp"
        android:textColor="@color/icons"/>
    <Button
        android:id="@+id/main_btn_assisted"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="@string/main_btn_attended"
        android:textSize="40dp"
        android:drawableLeft="@mipmap/ic_launcher"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_pending"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:elevation="8dp"
        android:textColor="@color/icons"/>

</android.support.constraint.ConstraintLayout>